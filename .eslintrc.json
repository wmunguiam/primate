{
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "jquery": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2020
    },
    "rules": {
        "linebreak-style": "off",
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-console": ["warn"],
        "no-unused-vars": ["warn"],
        "arrow-body-style": ["error", "always"],
        "require-await": ["error"],
        "eol-last": ["error", "always"]
    },
    "ignorePatterns": ["**/static/*.js", "dist/**"]
}
